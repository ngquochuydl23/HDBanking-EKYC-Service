<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.socialv2.ewallet.components.HdWalletToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Sửa thông tin" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/semibold_font"
                android:text="Thông tin cá nhân"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/jobTextInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:hint="Nghề nghiệp"
                android:labelFor="@id/jobAutoCompleteTextView"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="false"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="false"
                app:helperTextTextAppearance="@style/MaterialFieldHelperTextTextAppearance"
                app:helperTextTextColor="@color/textColorSecondary"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/jobAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="none"
                    android:popupBackground="@drawable/drawable_common_dropdown_popup"
                    android:popupTheme="@style/PopupTheme"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/positionTextInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:hint="Chức vụ"
                android:labelFor="@id/positionAutoCompleteTextView"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="false"
                app:helperTextTextAppearance="@style/MaterialFieldHelperTextTextAppearance"
                app:helperTextTextColor="@color/textColorSecondary"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/positionAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="none"
                    android:popupBackground="@drawable/drawable_common_dropdown_popup"
                    android:popupTheme="@style/PopupTheme"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateOfBirthTextInputLayout"
                style="@style/MaterialFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:hint="Ngày sinh"
                android:labelFor="@id/dateOfBirthEditText"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="true"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateOfBirthEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="text"
                    android:text="14/02/2003"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/genderTextInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:hint="Giới tính"
                android:labelFor="@id/provinceAutoCompleteTextView"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="false"
                app:helperTextTextAppearance="@style/MaterialFieldHelperTextTextAppearance"
                app:helperTextTextColor="@color/textColorSecondary"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/genderAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="none"
                    android:popupBackground="@drawable/drawable_common_dropdown_popup"
                    android:popupTheme="@style/PopupTheme"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/provinceTextInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:hint="Bạn đang sống tại"
                android:labelFor="@id/provinceAutoCompleteTextView"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="false"
                app:helperTextTextAppearance="@style/MaterialFieldHelperTextTextAppearance"
                app:helperTextTextColor="@color/textColorSecondary"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/provinceAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="none"
                    android:popupBackground="@drawable/drawable_common_dropdown_popup"
                    android:popupTheme="@style/PopupTheme"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/marriageStatusTextInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:hint="Tình trạng hôn nhân"
                android:labelFor="@id/provinceAutoCompleteTextView"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="false"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="false"
                app:helperTextTextAppearance="@style/MaterialFieldHelperTextTextAppearance"
                app:helperTextTextColor="@color/textColorSecondary"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/marriageStatusAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="none"
                    android:popupBackground="@drawable/drawable_common_dropdown_popup"
                    android:popupTheme="@style/PopupTheme"
                    android:textSize="14sp"
                    app:dropDownBackgroundTint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/studyLevelTextInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:hint="Trình độ học vấn"
                android:labelFor="@id/provinceAutoCompleteTextView"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="false"
                app:helperTextTextAppearance="@style/MaterialFieldHelperTextTextAppearance"
                app:helperTextTextColor="@color/textColorSecondary"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/studyLevelAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="none"
                    android:popupBackground="@drawable/drawable_common_dropdown_popup"
                    android:popupTheme="@style/PopupTheme"
                    android:textSize="14sp"
                    app:dropDownBackgroundTint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/hometownTextInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:hint="Quê quán"
                android:labelFor="@id/hometownAutoCompleteTextView"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:errorTextColor="@color/error"
                app:helperTextEnabled="false"
                app:helperTextTextAppearance="@style/MaterialFieldHelperTextTextAppearance"
                app:helperTextTextColor="@color/textColorSecondary"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/hometownAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="none"
                    android:popupBackground="@drawable/drawable_common_dropdown_popup"
                    android:popupTheme="@style/PopupTheme"
                    android:textSize="14sp"
                    app:dropDownBackgroundTint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/semibold_font"
                android:text="Thông tin liên hệ"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTextInputLayout"
                style="@style/MaterialFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:hint="Địa chỉ email"
                android:labelFor="@id/dateOfBirthEditText"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primaryColor"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:errorTextColor="@color/error"
                app:helperText="Bạn cần xác thực email để nhận được thông báo quan trọng từ HD."
                app:helperTextEnabled="true"
                app:helperTextTextAppearance="@style/MaterialFieldErrorTextAppearance"
                app:hintTextColor="@color/primaryColor"
                app:labelStyle="@style/LabelFontStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:fontFamily="@font/regular_font"
                    android:importantForAccessibility="yes"
                    android:inputType="textEmailAddress"
                    android:text="nguyenquochuydl123@gmail.com"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/drawable_filled_r10"
                android:backgroundTint="@color/primaryColor"
                android:fontFamily="@font/medium_font"
                android:text="Lưu thông tin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>