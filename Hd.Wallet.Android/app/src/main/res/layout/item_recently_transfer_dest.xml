<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/avatarCardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="1dp"
        android:background="@drawable/drawable_outline_circle_1w"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.socialv2.ewallet.components.AvatarView
            android:id="@+id/avatarView"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_agribank" />
    </FrameLayout>

    <TextView
        android:id="@+id/ownerNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/medium_font"
        android:text="HO THI THU TRAM"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/avatarCardView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatarCardView" />

    <TextView
        android:id="@+id/srcAccountNoBankTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/regular_font"
        android:text="190 319 0512 3456"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/avatarCardView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ownerNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>