<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avatarCardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="1dp"
        android:background="@drawable/drawable_outline_circle_1w"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.socialv2.ewallet.components.AvatarView
            android:id="@+id/avatarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/image_agribank" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/isBankLinkingView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/drawable_filled_circle"
        android:backgroundTint="#f5f5f5"
        android:padding="5dp"
        android:src="@drawable/ic_is_bank_linking"
        app:layout_constraintLeft_toRightOf="@id/avatarCardView"
        app:layout_constraintTop_toBottomOf="@id/avatarCardView"
        app:tint="#696969" />


    <TextView
        android:id="@+id/ownerNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/medium_font"
        android:text="HO THI THU TRAM"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarCardView" />


</androidx.constraintlayout.widget.ConstraintLayout>