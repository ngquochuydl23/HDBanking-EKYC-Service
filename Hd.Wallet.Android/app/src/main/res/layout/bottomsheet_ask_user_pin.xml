<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="0dp"
    android:paddingTop="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold_font"
        android:paddingHorizontal="15dp"
        android:text="Xác thực Digital OTP"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/errorMsgTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/regular_font"
        android:paddingHorizontal="15dp"
        android:text="Vui lòng nhập mã PIN Digital OTP để nhận mã xác thực giao dịch"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp" />

    <com.chaos.view.PinView
        android:id="@+id/otpTextView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="number"
        android:itemBackground="@drawable/drawable_bg_otp_item"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorColor="#000"
        app:cursorWidth="2dp"
        app:hideLineWhenFilled="true"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="8dp"
        app:itemSpacing="10dp"
        app:itemWidth="48dp"
        app:lineColor="@color/borderWidthColor"
        app:lineWidth="2dp"
        app:viewType="rectangle" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/regular_font"
        android:text="Mã OTP sẽ hết hiệu lực sau "
        android:textColor="@color/error"
        android:textSize="14sp" />

</LinearLayout>