<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="30dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_face_verification_failed" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold_font"
        android:text="Quét mã không thành công"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/regular_font"
        android:text="Ảnh khuôn mặt đang bị mờ, quá sáng, hoặc quá tối. Vui lòng thực hiện lại trong điều kiện ánh sáng ổn định và đảm bảo khuôn mặt nằm trong khung hình."
        android:textAlignment="center"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="0dp"
        android:fontFamily="@font/medium_font"
        android:text="Thử lại"
        android:textColor="@color/gray"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="20dp"
        app:strokeColor="@color/borderWidthColor"
        app:strokeWidth="1dp" />
</LinearLayout>