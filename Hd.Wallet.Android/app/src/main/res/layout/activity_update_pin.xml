<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.privacyAndSecurity.UpdatePinActivity">

<com.socialv2.ewallet.components.HdWalletToolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/medium_font"
            android:text="Vui lòng nhập mã Pin cũ "
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="normal" />

        <com.chaos.view.PinView
            android:id="@+id/otpTextView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:itemBackground="@drawable/drawable_bg_otp_item"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="#000"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="48dp"
            app:itemRadius="8dp"
            app:itemSpacing="10dp"
            app:itemWidth="48dp"
            app:lineColor="@color/borderWidthColor"
            app:lineWidth="1dp"
            app:viewType="rectangle" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/regular_font"
            android:textColor="@color/error"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/medium_font"
            android:text="Vui lòng nhập mã Pin mới"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="normal" />
        <com.chaos.view.PinView
            android:id="@+id/otpTextView1"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:itemBackground="@drawable/drawable_bg_otp_item"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="#000"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="48dp"
            app:itemRadius="8dp"
            app:itemSpacing="10dp"
            app:itemWidth="48dp"
            app:lineColor="@color/borderWidthColor"
            app:lineWidth="1dp"
            app:viewType="rectangle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/medium_font"
            android:text="Xác nhận mã Pin"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="normal" />
        <com.chaos.view.PinView
            android:id="@+id/otpTextView2"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:itemBackground="@drawable/drawable_bg_otp_item"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="#000"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="48dp"
            app:itemRadius="8dp"
            app:itemSpacing="10dp"
            app:itemWidth="48dp"
            app:lineColor="@color/borderWidthColor"
            app:lineWidth="1dp"
            app:viewType="rectangle" />
        <TextView
            android:id="@+id/errorTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/regular_font"
            android:textColor="@color/error"
            android:textSize="14sp" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/drawable_filled_r10"
            android:backgroundTint="@color/primaryColor"
            android:fontFamily="@font/medium_font"
            android:text="Tiếp tục"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>