<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.OCRBanking_MobileApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.OCRBanking_MobileApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/foregroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:letterSpacing">0</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="android:windowBackground">@color/foregroundColor</item>

    </style>

    <style name="CameraButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item> <!-- Override background tint -->
        <item name="android:textColor">@color/white</item> <!-- Override text color -->
    </style>

    <style name="CameraActivityStyle" parent="Theme.OCRBanking_MobileApp">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_border_top10dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:navigationBarColor">@color/foregroundColor</item>
    </style>

    <style name="PinBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:navigationBarColor">@color/foregroundColor</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="BottomNavigationStyle">
        <item name="android:textSize">@dimen/bottom_navigation_active_text_size</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>


    <style name="OnlyDarkActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:screenOrientation">userPortrait</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowBackground">@color/black</item>
    </style>


    <!-- Toolbar    ?-->
    <style name="WeChatMainToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/foregroundColor</item>
        <item name="android:titleTextColor">@color/textColorPrimary</item>
    </style>

    <style name="OCRMainToolbar_TitleTextAppearance">
        <item name="android:fontFamily">@font/semibold_font</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OCRCameraToolbar_TitleTextAppearance">
        <item name="android:fontFamily">@font/semibold_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OCRMainToolbar_popupTheme">

    </style>

    <style name="ChipBadgeRoomChat" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="TabTextAppearance" >
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SelectedTabTextAppearance" parent="TabTextAppearance">
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialFieldLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/MaterialFieldShapeAppearance</item>
    </style>

    <style name="LabelFontStyle">
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="MaterialFieldShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <style name="MaterialFieldErrorTextAppearance">
        <item name="android:fontFamily">@font/regular_font</item>
    </style>


    <style name="MaterialFieldHelperTextAppearance">
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="MaterialFieldHelperTextTextAppearance">
        <item name="android:padding">0dp</item> <!-- Remove padding -->
        <item name="android:layout_margin">0dp</item> <!-- Remove margin -->
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="MainBottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">30dp</item> <!-- Set the desired icon size here -->
    </style>
    
    <style name="PopupTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@drawable/drawable_common_dropdown_popup</item>
    </style>
</resources>